{% extends getPartial('page-design') %}

{% block PageBody %}

    {{ component( "PluginCeres::Basket.Components.AddToBasket" ) }}
    {{ component( "PluginCeres::ItemList.Components.CategoryItem" ) }}
    {{ component( "PluginCeres::ItemList.Components.ImageCarousel" ) }}
    {{ component( "PluginCeres::ItemList.Components.ItemLazyImg" ) }}
    {{ component( "PluginCeres::ItemList.Components.ItemList" ) }}
    {{ component( "PluginCeres::ItemList.Components.ItemListSorting" ) }}
    {{ component( "PluginCeres::ItemList.Components.ItemsPerPage" ) }}
    {{ component( "PluginCeres::ItemList.Components.ItemStoreSpecial" ) }}
    {{ component( "PluginCeres::ItemList.Components.LoadingAnimation" ) }}
    {{ component( "PluginCeres::ItemList.Components.Pagination" ) }}

    <resource name="itemList" :data="{}"></resource>

    <div class="categoriegrid page-content container-max">
        <div class="m-b-3 col-xs-12">

            <div class="col-xs-12 col-lg-5 offset-lg-7">
                <item-list-sorting template="#vue-item-list-sorting" :sort-data="{{ config("PluginCeres.sort.data") | split(', ') | json_encode() }}"></item-list-sorting>
                <items-per-page template="#vue-items-per-page" :pagination-values="{{ config("PluginCeres.pagination.values") | split(', ') | json_encode() }}"></items-per-page>
                <pagination template="#vue-pagination"></pagination>
            </div>

        </div>

        <div class="col-xs-12">
            <loading-animation template="#vue-loading-animation"></loading-animation>
            <item-list template="#vue-item-list"></item-list>
        </div>

        <div class="list-controls m-b-3 row">
            <div class="col-xs-12">
            </div>
        </div>
    </div>

{% endblock %}
