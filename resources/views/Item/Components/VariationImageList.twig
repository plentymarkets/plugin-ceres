            <div class="owl_item" v-for="image in currentVariation.documents[0].data.images.all">
                <div class="square-container">
                    <div class="square-inner center-xy main-image">
                        <a :href="'/' + image.path" data-lightbox="single-big-image-gallery">
                            <img :src="'/' + image.path" class="img-fluid">
