{% macro get_children(category, currentScopeUrl, level) %}
    {% set maxitems = { "1": 999, "2": 3 ,"3": 2} %}
    {% import _self as childlist %}
    {% set counter = 0 %}
    {% if level < config('Ceres.header.megamenu_levels') %}
        {% for child in category.children if counter < maxitems[level] %}
            {% if (child.details | length > 0) %}
                <li class="level{{ level }}">
                    {% set newScope = currentScopeUrl ~ "/" ~ child.details[0].nameUrl %}
                    <a href="{{ newScope }}" v-render-category="{{ child }}">{{ child.details[0].name }}</a>
                    {% if child.children %}
                        {% if level == 1 %}<ul>{% endif %}
                            {% set level = level + 1 %}
                            {{ childlist.get_children(child, newScope, level) }}
                            {% set level = level - 1 %}
                        {% if level == 1 %}</ul>{% endif %}
                    {% endif %}
                </li>
                {% set counter = counter + 1 %}
                {% if counter == maxitems[level]%}
                    <li class="level{{ level }} bt-more"><a href="{{ currentScopeUrl }}" v-render-category="{{ category }}">{{ trans("Ceres::Template.itemShowMore") }}...</a></li>
                {% endif %}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endmacro %}

{% macro get_nav_bar(categories, currentScopeUrl) %}
    {% import _self as navbar %}
    {% set counter = 0 %}

    {% for category in categories %}

        {% if category.details | length > 0 %}

            {% set currentScopeUrl = "/" ~ category.details[0].nameUrl %}

            {% if category.children %}

                <li class="ddown">
                    <a href="{{ currentScopeUrl }}" v-render-category="{{ category }}">{{ category.details[0].name }}</a>

                    <span class="hidden-lg-up nav-direction" data-toggle="collapse" href="#navDropdown{{ counter }}" aria-expanded="false">
                        <i class="fa fa-caret-down" aria-hidden="true"></i>
                    </span>
                    
                    {% if config('Ceres.header.megamenu_levels') > 1 %}
                    <div class="navDropdown_wrapper">
                    {% endif %}

                    <ul data-level="1" id="navDropdown{{ counter }}" class="collapse"{% if config('Ceres.header.megamenu_align') == "1" %} style="-webkit-box-align: start;-ms-flex-align: start;align-items: flex-start;"{% endif %}>

                        {% set counter = counter + 1 %}
                        {% if config('Ceres.header.megamenu_levels')=="1" %}
                            {% for child in category.children %}
                                {% if child.details | length > 0 %}
                                    <li>
                                        <a href="{{ currentScopeUrl }}/{{ child.details[0].nameUrl }}" v-render-category="{{ child }}">{{ child.details[0].name }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        {% else %}
                            {{ navbar.get_children(category, currentScopeUrl, 1) }}
                        {% endif %}
                    </ul>
                    {% if config('Ceres.header.megamenu_levels') > 1 %}
                    </div>
                    {% endif %}
                </li>

            {% else %}

                <li>
                    <a href="{{ currentScopeUrl }}" v-render-category="{{ category }}">{{ category.details[0].name }}</a>
                </li>

            {% endif %}
        {% endif %}
    {% endfor %}

{% endmacro %}

{% macro get_sidemenu(breadcrumbs, categories, currentScopeUrl) %}

    {% import _self as sidemenu %}

    {% set urlNow = currentScopeUrl %}


    {% for category in categories %}

        {% set urlNow = currentScopeUrl ~ "/" ~ category.details[0].nameUrl %}

        {% if category.details[0] %}
            <ul>
                <li class="nav-item{% for breadcrumb in breadcrumbs %}{% if category.id == breadcrumb.id %} active{% endif %}{% endfor %}" v-check-active category="{{ category }}">
                    <a href="{{ urlNow }}" class="nav-link" v-render-category="{{ category }}">{{ category.details[0].name }}</a>
                    {% if category.children is not empty %}
                        {{ sidemenu.get_sidemenu(breadcrumbs, category.children, urlNow) }}
                    {% endif %}
                </li>
            </ul>
        {% endif %}

    {% endfor %}

{% endmacro %}