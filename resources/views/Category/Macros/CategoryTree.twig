{% macro get_nav_bar(categories, currentScopeUrl) %}

    {% set counter = 0 %}

    {% for category in categories %}

        {% if category.details | length > 0 %}

            {% set currentScopeUrl = "/" ~ category.details[0].nameUrl %}

            {% if category.children %}

                <li class="ddown">
                    <a href="{{ currentScopeUrl }}" v-render-category="{{ category.id }}">{{ category.details[0].name }}</a>

                    <span class="hidden-lg-up nav-direction" data-toggle="collapse" href="#navDropdown{{ counter }}" aria-expanded="false">
                        <i class="fa fa-caret-down" aria-hidden="true"></i>
                    </span>

                    <ul data-level="1" id="navDropdown{{ counter }}" class="collapse">

                        {% set counter = counter + 1 %}

                        {% for child in category.children %}
                            {% if child.details | length > 0 %}
                                <li>
                                    <a href="{{ currentScopeUrl }}/{{ child.details[0].nameUrl }}" v-render-category="{{ child.id }}">{{ child.details[0].name }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}

                    </ul>
                </li>

            {% else %}

                <li>
                    <a href="{{ currentScopeUrl }}" v-render-category="{{ category.id }}">{{ category.details[0].name }}</a>
                </li>

            {% endif %}
        {% endif %}
    {% endfor %}

{% endmacro %}

{% macro get_sidemenu(breadcrumbs, categories, currentScopeUrl) %}

    {% import _self as sidemenu %}

    {% set urlNow = currentScopeUrl %}


    {% for category in categories %}

        {% set urlNow = currentScopeUrl ~ "/" ~ category.details[0].nameUrl %}

        {% if category.details[0] %}
            <ul>
                <li class="nav-item{% for breadcrumb in breadcrumbs %}{% if category.id == breadcrumb.id %} active{% endif %}{% endfor %}" v-update-sidenav-selection="$store.getters.breadcrumbs" category-id="{{ category.id }}">
                    <a href="{{ urlNow }}" class="nav-link" v-render-category="{{ category.id }}">{{ category.details[0].name }}</a>
                    {% if category.children is not empty %}
                        {{ sidemenu.get_sidemenu(breadcrumbs, category.children, urlNow) }}
                    {% endif %}
                </li>
            </ul>
        {% endif %}

    {% endfor %}

{% endmacro %}