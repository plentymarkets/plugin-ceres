{{ component( "PluginCeres::Basket.Components.AddToBasket" ) }}

{% import "PluginCeres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% set image = item.data.images.all | first %}
{% set configItemName = config("PluginCeres.item.name") %}

<article class="cmp cmp-product-thumb cmp-product-thumb--grid">
    <div class="thumb-inner">
        <div class="thumb-background"></div>

        <add-to-basket template="#vue-add-to-basket" :item="{{ item.data | json_encode() }}" :show-quantity="false"
                       item-url="{{ item.data.item.id | buildItemURL(item.data.variation.id, true) }}"></add-to-basket>

        <div class="thumb-image">
            <div class="square-container">
                <div class="square-inner main-image">
                    <a href="{{ item.data.item.id | buildItemURL(item.data.variation.id, true) }}">
                        <img class="img-fluid lazy" data-original="{{ app.request.baseUrl }}/{{ image.path }}">
                    </a>
                </div>
            </div>
        </div>

        <!-- STORE SPECIALS -->

        {% if item.data.item.storeSpecial.id > 0 %}

            {% set storeSpecial = item.data.item.storeSpecial.names[0].name %}

            <div class="special-tags">
                {% if  item.data.item.storeSpecial.id == 1 %}

                    {% set storeSpecialColor = 'danger' %}
                    {% set percent = 100-(item.data.salesPrices[1].price/item.data.salesPrices[0].price*100) %}

                    {% if percent <= 0 %}
                        {% set dezimalcount = config('PluginCeres.item.storeSpecial') %}
                        {% set percent = percent | number_format(dezimalcount, ',', '.') %}
                        {% set storeSpecial = percent ~"%" %}
                    {% endif %}

                {% elseif  item.data.item.storeSpecial.id == 2 %}

                    {% set storeSpecialColor = 'primary' %}

                {% elseif  item.data.item.storeSpecial.id == 3 %}

                    {% set storeSpecialColor = 'success' %}

                {% endif %}

                <span class="tag bg-{{ storeSpecialColor }}">
                    {{ storeSpecial }}
                </span>

            </div>
        {% endif %}
        <!-- ./STORE SPECIALS -->

        <!-- ITEM DETAILS -->
        <div class="thumb-content">
            <a href="{{ item.data.item.id | buildItemURL(item.data.variation.id, true) }}" class="thumb-title small">
                {{ item.data.texts[0].name1 }}
            </a>
            <div class="thumb-meta">
                {{ LayoutContainer.show("PluginCeres::CategoryItem.BeforePrices", item) }}

                <div class="prices">
                    {% if item.data.salesPrices[1].price != '0' %}
                        <del class="crossprice">
                            {{ item.data.salesPrices[1].price }} €
                            {#{{ item.data.salesPrices[1].price != '0' | formatMonetary(item.variationRetailPrice.currency) }}#}
                        </del>
                    {% endif %}

                    <div class="price">
                        {{ item.data.salesPrices[0].price }} €
                        {#{{ variationRetailPrice | formatMonetary(item.variationRetailPrice.currency) }}#}
                    </div>
                </div>

                {{ LayoutContainer.show("PluginCeres::CategoryItem.AfterPrices", item) }}
            </div>
        </div>
        <!-- ./ITEM DETAILS  -->
    </div>
</article>