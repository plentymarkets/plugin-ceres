{{ component("Ceres::MyAccount.Components.OrderDocuments") }}
{{ component("Ceres::Customer.Components.AddressSelect.AddressHeader") }}

<script type="x/template" id="vue-order-history-list-item">
    <div :id="'accordion_' + _uid" class="accordion">
        <div @click="loadOrderDetailTemplate()" class="row container_clickable collapsed border py-3" :id="'heading_' + _uid" data-toggle="collapse" :data-target="'#collapse_'+ _uid" aria-expanded="false" :aria-controls="'collapse_'+ _uid">
            <div class="col-sm-9">
                <div class="row">
                    <i class="fa fa-chevron-down" aria-hidden="true"></i>
                    <div class="col-sm-3"><span>{{ trans("Ceres::Template.orderHistoryOrderId") }}</span>
                    <span>${ order.id }</span></div>
                    
                    <div class="col-sm-3"><span>{{ trans("Ceres::Template.orderHistoryDate") }}</span>
                    <span>${ order.creationDate | moment("{{ trans("Ceres::Template.devDateFormatMoment") }}") }</span></div>
                    
                    <div class="col-sm-3"><span>{{ trans("Ceres::Template.orderHistoryTotal") }}</span>
                    <span>${ order.total | currency }</span></div>
                    
                    <template v-if="order.status.trim().length > 0">
                        <div class="col-sm-3"><span>{{ trans("Ceres::Template.orderHistoryStatus") }}</span>
                        <span>${ order.status }</span></div>
                    </template>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="icons d-none d-sm-block">
                    <a href="#"><i class="fa fa-truck" aria-hidden="true"></i></a>
                    <a href="#"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                </div>
                <div class="buttons d-block d-sm-none mt-2">
                    <a href="#" class="btn btn-primary btn-block"><span>Sendungsverfolgung</span><i class="fa fa-truck" aria-hidden="true"></i></a>
                    {# <a href="#" class="btn btn-primary btn-block"><span>Erneut bestellen</span><i class="fa fa-shopping-cart" aria-hidden="true"></i></a> #}
                </div>
            </div>
        </div>
        
        <div class="collapse" :id="'collapse_'+ _uid" :data-parent="'#accordion_'+ _uid">
            <div ref="orderDetailsContainer" class="container_main">
                <div class="loading row">
                    {% include "Ceres::ItemList.Partials.LoadingAnimation" %}
                </div>
                
                {# lazy load: Ceres::MyAccount.Partials.OrderHistoryListItemDetails #}
            </div>
        </div>

    </div>
</script>