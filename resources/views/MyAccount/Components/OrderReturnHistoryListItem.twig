{{ component("Ceres::MyAccount.Components.OrderDocuments") }}

<script type="x/template" id="vue-order-return-history-list-item">
    <div :id="'accordion_' + _uid" class="accordion col-sm-12">
        <div :id="'heading_' + _uid" class="row container_clickable collapsed border py-3" data-toggle="collapse" :data-target="'#collapse_'+ _uid" aria-expanded="false" :aria-controls="'collapse_'+ _uid">
            <div class="col-sm-9">
                <div class="row">
                    <i class="fa fa-chevron-up" aria-hidden="true"></i>
                    <div class="col-sm-3"><span>{{ trans("Ceres::Template.returnHistoryReturnId") }}</span><span>${ returnOrder.order.id }</span></div>
                    <div class="col-sm-3"><span>{{ trans("Ceres::Template.returnHistoryOrderId") }}</span><span>${ getOriginOrderId(returnOrder.order) }</span></div>
                    <div class="col-sm-3"><span>{{ trans("Ceres::Template.returnHistoryDate") }}</span><span>${ returnOrder.order.createdAt | moment("{{ trans("Ceres::Template.devDateTimeFormatMoment") }}") } {{ trans("Ceres::Template.returnHistoryTime") }}</span></div>
                    <div class="col-sm-3"><span>{{ trans("Ceres::Template.returnHistoryPaymentMethod") }}</span><span>${ returnOrder.paymentMethodName }</span></div>
                </div>
            </div>
            <order-documents :documents="returnOrder.order.documents" :appearance="appearance" class="col-sm-3" type="return"></order-documents>
        </div>
        <div :id="'collapse_'+ _uid" class="row container_middle border collapse" :aria-labelledby="'heading_'+ _uid" :data-parent="'#accordion_'+ _uid">
            <div class="col-sm-12 item py-2" v-for="orderItem in itemsToRender">
                <div class="row">
                    <div class="col-sm-12">
                        <a class="d-inline-block" :href="returnOrder.itemURLs[orderItem.itemVariationId]">
                            <img :src="returnOrder.itemImages[orderItem.itemVariationId]" :alt=" orderItem | itemBundleName " :title="orderItem | itemBundleName">
                        </a>
                        <div class="d-inline-block item-description">
                            <div><a :href="returnOrder.itemURLs[orderItem.itemVariationId]" :class="'text-' + appearance">${ orderItem | itemBundleName }</a></div>
                            <div>{{ trans("Ceres::Template.returnHistoryQuantity") }}: ${ orderItem.quantity}</div>
                        </div>
                    </div>
                </div> 
            </div> 
            <div class="col-sm-12 text-center mb-2">
                <a v-if="returnOrder.order.orderItems.length > itemsPerList" @click="toggleNaming('more-return-text-' + _uid)" :id="'more-return-text-' + _uid" :class="'text-' + appearance" data-toggle="collapse" :href="'#more-return-items-' + _uid" aria-expanded="false" aria-controls="collapseExample">
                    {{ trans("Ceres::Template.returnHistoryReturnShowMore") }}
                </a>
            </div>
        </div> 
    </div>
</script>