<script type="x/template" id="vue-account-settings">
    <div class="card-body">
 
        <div><strong>{{ trans("Ceres::Template.myAccountEmail") }}</strong></div>
        <div v-if="!!userData">${ userData.email }</div>
        <div><strong>{{ trans("Ceres::Template.myAccountPassword") }}</strong></div>
        <div>***********</div>

        <div class="add-item">
            <span class="item-edit">
                <button v-tooltip data-toggle="tooltip" data-placement="top" title="{{ trans("Ceres::Template.myAccountChangeSettings") }}" class="btn btn-primary btn-appearance btn-medium btn-only-icon-xs-down" @click="showChangeAccountSettings">
                    <span>{{ trans("Ceres::Template.myAccountChangeSettings") }}</span>
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </button>
            </span>
        </div>

        <!-- EDIT_MODAL -->
        <div ref="accountSettingsModal">
            <div class="modal fade" data-backdrop="static">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">{{ trans("Ceres::Template.myAccountChangePassword") }}</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" @click="clearFields">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body form-horizontal">
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-unit">
                                        <input type="password" name="old_password" v-model="oldPassword" data-autofocus>
                                        <label for="old_password">{{ trans("Ceres::Template.myAccountOldPassword") }}</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-unit">
                                        <input type="password" name="new_password" v-model="newPassword">
                                        <label for="new_password">{{ trans("Ceres::Template.myAccountNewPassword") }}</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-unit no-bottom">
                                        <input type="password" name="confirm_password" v-model="confirmPassword">
                                        <label for="confirm_password">{{ trans("Ceres::Template.myAccountRepeatPassword") }}</label>
                                    </div>
                                </div>
                            </div>
                             <div class="row my-2">
                                <div class="col-12">
                                    <div v-show="!matchPassword" class="text-danger">{{ trans("Ceres::Template.myAccountCorrectPassword") }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger btn-medium btn-m-r" data-dismiss="modal" @click="clearFields">
                                <i class="fa fa-times" aria-hidden="true"></i> 
                                {{ trans("Ceres::Template.myAccountCancel") }}
                            </button>
                            <button type="button" class="btn btn-primary btn-medium" @click="saveAccountSettings" :class="{'disabled': !isValid}">
                                <i class="fa fa-check" aria-hidden="true"></i> 
                                {{ trans("Ceres::Template.myAccountSave") }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ./EDIT_MODAL -->
    </div>
</script>
