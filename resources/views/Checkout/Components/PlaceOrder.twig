{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

<script type="x/template" id="vue-place-order">
    <div>
        {% set buttonReplacement = LayoutContainer.show("Ceres::Checkout.PlaceOrder") %}
        {% if buttonReplacement|trim is not empty %}
            {{ buttonReplacement }}
        {% else %}
            <button
                class="btn btn-block btn-primary btn-appearance"
                :class="buttonClasses"
                :style="paddingInlineStyles"
                @click="placeOrder()"
                :disabled="waiting || isBasketLoading || !isBasketInitiallyLoaded">
                <i v-waiting-animation="waiting" class="fa fa-arrow-right" aria-hidden="true"></i> {{ trans("Ceres::Template.checkoutBuyNow") }}
            </button>
        {% endif %}
    </div>
</script>
