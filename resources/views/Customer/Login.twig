{% extends "PluginCeres::PageDesign.PageDesign" %}

{% block PageBody %}
    <div class="anmeldung container-max">
        <div class="row m-b-3">
            <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
                <h1 class="m-b-3">{{ trans("PluginCeres::Template.accLogin") }}</h1>
                <login backlink="{{ request.get("backlink") }}" has-to-forward="true"></login>
                <hr>
                <div class="row">
                    <div class="col-sm-6">
                        <a class="btn btn-primary btn-block m-b-1" href="/register">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            {{ trans("PluginCeres::Template.accRegister") }}
                        </a>
                        <!-- <p>Sie erhalten in Ihrem persönlichen "Mein Konto"-Bereich jederzeit Zugriff auf Ihre Bestellungen sowie Ihre Kundendaten.</p> -->
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-primary btn-block m-b-1" href="/checkout">
                            <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                            {{ trans("PluginCeres::Template.accOrderAsGuest") }}
                        </a>
                        <!-- <p>Als Gast bestellen Sie ohne Registrierung. Bei weiteren Bestellungen müssen Sie Ihre Daten erneut eingeben.</p> -->
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
