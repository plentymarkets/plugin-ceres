{% set addressFields = config("Ceres.delivery_address.en.show") | split(', ') %}
{% set addressFieldsRequired = config("Ceres.delivery_address.en.require") | split(', ') %}


<div class="col-xs-12">
    <div class="row">
        {% if "delivery_address.salutation" in addressFields %}
            <div class="col-xs-12 col-sm-4">
                <div class="input-unit"
        {% if "delivery_address.salutation" in addressFieldsRequired %}data-validate{% endif %}>
                    <salutation-select template="#vue-salutation-select" :address-data="addressData"></salutation-select>
                    <label for="txtSalutation${_uid}">{{ trans("Ceres::Template.addressSalutation") }}{% if "delivery_adress.salutation" in addressFieldsRequired %}*{% endif %}</label>
                </div>
            </div>
        {% endif %}

