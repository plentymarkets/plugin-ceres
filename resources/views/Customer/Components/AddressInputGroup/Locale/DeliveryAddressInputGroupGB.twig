{{ component( "Ceres::Customer.Components.SalutationSelect" ) }}

{% set addressFields = config("Ceres.delivery_address.en.show") | split(', ') %}
{% set addressFieldsRequired = config("Ceres.delivery_address.en.require") | split(', ') %}


<div class="col-xs-12">
    <div class="row">
        {% if "delivery_address.salutation" in addressFields %}
            <div class="col-xs-12 col-sm-4">
                <div class="input-unit"
                    {% if "delivery_address.salutation" in addressFieldsRequired %}data-validate{% endif %}>
                    <salutation-select template="#vue-salutation-select" :address-type="addressType" :address-data="addressData"></salutation-select>
                    <label for="txtSalutation${_uid}">{{ trans("Ceres::Template.addressSalutation") }}{% if "delivery_adress.salutation" in addressFieldsRequired %}*{% endif %}</label>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<div class="col-xs-12">
    <div class="row">
        {% if "delivery_address.name1" in addressFields %}
            <div class="col-xs-12 col-sm-6" {% if "delivery_address.salutation" in addressFields %}v-if="addressData.addressSalutation === 2"{% endif %}>
                <div class="input-unit"
                     {% if "delivery_address.name1" in addressFieldsRequired %}data-validate="text" {% endif %}data-model="name1">
                    <input type="text" name="company" id="txtCompany${_uid}" v-model="addressData.name1">
                    <label for="txtCompany${_uid}">{{ trans("Ceres::Template.addressCompany") }}{% if "delivery_address.name1" in addressFieldsRequired %}*{% endif %}</label>
                </div>
            </div>
        {% endif %}
    </div>
</div>


<div class="col-xs-12">
    <div class="row">

        {% if "delivery_address.title" in addressFields %}
            <div class="col-xs-12 col-sm-4">
                <div class="input-unit"
                     {% if "delivery_address.title" in addressFieldsRequired %}data-validate="text" {% endif %}data-model="title">
                    <input type="text" name="title" id="txtTitle${_uid}" v-model="addressData.title | optionType 11">
                    <label for="txtTitle${_uid}">{{ trans("Ceres::Template.addressTitle") }}{% if "delivery_address.title" in addressFieldsRequired %}*{% endif %}</label>
                </div>
            </div>
        {% endif %}

        <div class="col-xs-12 col-sm-4">
            <div class="input-unit" data-validate="text" data-model="name2">
                <input type="text" name="firstName" id="txtFirstName${_uid}" v-model="addressData.name2">
                <label for="txtFirstName${_uid}">{{ trans("Ceres::Template.addressFirstName") }}*</label>
            </div>
        </div>

        <div class="col-xs-12 col-sm-4">
            <div class="input-unit" data-validate="text" data-model="name3">
                <input type="text" name="lastName" id="txtLastName${_uid}" v-model="addressData.name3">
                <label for="txtLastName${_uid}">{{ trans("Ceres::Template.addressLastName") }}*</label>
            </div>
        </div>

        {% if "delivery_address.name4" in addressFields %}
            <div class="col-sm-4">
                <div class="input-unit"
                     {% if "delivery_address.name4" in addressFieldsRequired %}data-validate="text" {% endif %}data-model="name4">
                    <input type="text" name="decorateName" id="txtAdditionalName${_uid}" v-model="addressData.name4">
                    <label for="txtAdditionalName${_uid}">{{ trans("Ceres::Template.addressGBNameAffix") }}{% if "delivery_address.name4" in addressFieldsRequired %}*{% endif %}</label>
                </div>
            </div>
        {% endif %}

        {% if "delivery_address.phoneNumber" in addressFields %}
            <div class="col-xs-12 col-sm-4">
                <div class="input-unit"
                     {% if "delivery_address.phoneNumber" in addressFieldsRequired %}data-validate="text" {% endif %}data-model="telephone">
                    <input type="text" name="telephone" id="txtTelephone${_uid}" v-model="addressData.telephone | optionType 4">
                    <label for="txtTelephone${_uid}">{{ trans("Ceres::Template.addressTelephone") }}{% if "delivery_address.phoneNumber" in addressFieldsRequired %}*{% endif %}</label>
                </div>
            </div>
        {% endif %}
    </div>
</div>
<div class="col-xs-12">
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <div class="input-unit" data-validate="text" data-model="address1">
                <input type="text" name="street" autocomplete="address-line1" id="txtStreet${_uid}" v-model="addressData.address1">
                <label for="txtStreet${_uid}">{{ trans("Ceres::Template.addressENAddressLine1") }}*
                </label>
            </div>
        </div>

        {% if "delivery_address.address2" in addressFields %}
        <div class="col-xs-12 col-sm-12">
            <div class="input-unit" {% if "delivery_address.address2" in addressFieldsRequired %}data-validate="text" {% endif %}data-model="address2">
                <input type="text" name="housenumber" autocomplete="address-line2" id="txtNumber${_uid}" v-model="addressData.address2">
                <label for="txtNumber${_uid}">{{ trans("Ceres::Template.addressENAddressLine2") }}{% if "delivery_address.address2" in addressFieldsRequired %}*{% endif %}</label>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<div class="col-xs-12">
    <div class="row">
        {% if "delivery_address.address3" in addressFields %}
            <div class="col-xs-12 col-sm-12">
                <div class="input-unit"
                     {% if "delivery_address.address3" in addressFieldsRequired %}data-validate="text" {% endif %}data-model="address3">
                    <input type="text" name="buildingName" id="decorateAddress0${_uid}" v-model="addressData.address3">
                    <label for="decorateAddress0${_uid}">{{ trans("Ceres::Template.addressENAddressLine3") }}{% if "delivery_address.address3" in addressFieldsRequired %}*{% endif %}</label>
                </div>
            </div>
        {% endif %}

        {% if "delivery_address.address4" in addressFields %}
            <div class="col-xs-12 col-sm-12">
                <div class="input-unit"
                     {% if "delivery_address.address4" in addressFieldsRequired %}data-validate="text" {% endif %}data-model="address4">
                    <input type="text" name="buildingName" id="decorateAddress0${_uid}" v-model="addressData.address4">
                    <label for="decorateAddress0${_uid}">{{ trans("Ceres::Template.addressENAddressLine4") }}{% if "delivery_address.address4" in addressFieldsRequired %}*{% endif %}</label>
                </div>
            </div>
        {% endif %}
    </div>
</div>


<div class="col-xs-12 col-sm-4">
    <div class="input-unit" data-validate="text" data-model="town">
        <input type="text" name="town" id="txtPlace${_uid}" v-model="addressData.town">
        <label for="txtPlace${_uid}">{{ trans("Ceres::Template.addressPlace") }}*</label>
    </div>
</div>

<div class="col-xs-12 col-sm-4">
    <div class="input-unit" data-validate="text" data-model="postalCode">
        <input type="text" name="zip" id="txtZip${_uid}" v-model="addressData.postalCode">
        <label for="txtZip${_uid}">{{ trans("Ceres::Template.addressZip") }}*</label>
    </div>
</div>

{{ LayoutContainer.show("Ceres::Checkout.CustomAddressField") }}