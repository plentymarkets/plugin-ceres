                        {#<input class="form-check-input" type="checkbox" value="">#}
                        {#<span>{{ trans("Ceres::Template.accRememberPassword") }}</span>#}
                    {#</label>#}

                    {#<div>#}
                        {#<a href="#" class="small">{{ trans("Ceres::Template.accForgotPassword") }}</a>#}
                    {#</div>#}
                {#</div>#}

                <div class="col-xs-12">
                    {{ LayoutContainer.show("Ceres::LoginOverlay.ExtendOverlayButtons") }}

                    <button @click.prevent="validateLogin" :disabled="isDisabled" class="btn btn-primary pull-xs-right">{{ trans("Ceres::Template.accLogin") }}</button>
                </div>
            </div>
        </form>
    </div>
</script>
