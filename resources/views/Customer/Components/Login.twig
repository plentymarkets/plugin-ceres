{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% set emailRegex = config("Ceres.register.email_regex") %}

<script type="x/template" id="vue-login">
    <div>
        <form id="login-form-${_uid}" class="m-b-1">
            <div class="row">
                <div class="col-xs-12">
                    <div class="input-unit" data-validate="regex">
                        <input type="email" name="email" id="txt_email" v-model="username" data-validate-ref="{{ emailRegex }}">
                        <label for="txt_email">{{ trans("Ceres::Template.accEmail") }}*</label>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="input-unit" data-validate="text">
                        <input type="password" name="password" id="txt_password" v-model="password">
                        <label for="txt_password">{{ trans("Ceres::Template.accPassword") }}*</label>
                    </div>
                </div>

