<script type="x/template" id="vue-address-header">
    <div>
        <strong v-if="address && address.name1 && address.name1.length > 0">${address.name1}</strong>
        <span>${ address | optionType(12) }</span>
        <strong v-if="address && !address.name1 || address.name1.length == 0">${address | optionType(11)} ${address.name2} ${address.name3}</strong>
        <span v-else-if="!address.name1">${address | optionType(11)} ${address.name2} ${address.name3}</span>
        <span>${address.name4}</span>
        <span>${address.address1}&nbsp;${address.address2}</span>
        <span>
            <template v-if="address.address1 === 'PACKSTATION' || address.address1 === 'POSTFILIALE'">
                {{ trans("Ceres::Template.addressPostNummer") }}
                ${address | optionType(6)}
            </template> 
            ${ address.address3 }
        </span>
        <span>${address.postalCode} ${address.town}</span>
        <span>${getCountryName(address.countryId)}</span>
    </div>
</script>
