{% set emailRegex = config("PluginCeres.register.email_regex") %}
{% set passwordRegex = config("PluginCeres.register.password_regex") %}

{{ component( "PluginCeres::Customer.Components.AddressInputGroup.AddressInputGroup" ) }}
<script type="x/template" id="vue-registration">
	<div class="row" id="registration${_uid}">
        <div class="col-sm-12">
            <div class="input-unit" data-validate="regex">
                <input type="text" name="email" id="txt_email" v-model="username" data-validate-ref="{{ emailRegex }}">
                <label for="txt_email">{{ trans("PluginCeres::Template.accEmail") }}*</label>
            </div>
        </div>

        <div class="col-sm-6" v-if="!guestMode">
            <div class="input-unit" id="passwordBox" data-validate="regex">
                <input type="password" name="password" id="registration_password_input" v-model="password" data-validate-ref="{{ passwordRegex }}">
                <label for="txt_pw">{{ trans("PluginCeres::Template.accPassword") }}*</label>
            </div>
        </div>

        <div class="col-sm-6" v-if="!guestMode">
            <div class="input-unit" id="passwordRepeatBox" data-validate="ref">
                <input type="password" name="password-repeat" id="txt_pwrepeat" v-model="passwordRepeat" data-validate-ref="#registration_password_input">
                <label for="txt_pwrepeat">{{ trans("PluginCeres::Template.accRepeatPassword") }}*</label>
            </div>
        </div>

        <address-input-group template="#vue-address-input-group" v-if="!isSimpleRegistration" :address-data.sync="billingAddress"></address-input-group>

        <div class="col-sm-5 offset-sm-7">
            <button @click="validateRegistration" :disabled="isDisabled" class="btn btn-primary btn-block">{{ trans("PluginCeres::Template.accRegister") }}</button>
        </div>
    </div>
</script>