{% set layoutDesktop = widget.settings.layoutDesktop.mobile %}
{% set layoutTablet = widget.settings.layoutTablet.mobile %}
{% set layoutMobile = widget.settings.layoutMobile.mobile %}

<div class="widget widget-grid row">
    <div class="widget-inner 
        {{ gridLayouts[layoutDesktop][0] | replace({'md': "lg"}) }} 
        {{ gridLayouts[layoutTablet][0] | replace({'md': "sm"}) }} 
        {{ gridLayouts[layoutMobile][0] | replace({'md': "xs"}) }}">
        <div{% if isPreview %} data-builder-child-container="first"{% endif %}>{{ children.first | raw }}</div>
    </div>
    <div class="widget-inner         
        {{ gridLayouts[layoutDesktop][1] | replace({'md': "lg"}) }} 
        {{ gridLayouts[layoutTablet][1] | replace({'md': "sm"}) }} 
        {{ gridLayouts[layoutMobile][1] | replace({'md': "xs"}) }}">
        <div{% if isPreview %} data-builder-child-container="second"{% endif %}>{{ children.second | raw }}</div>
    </div>
</div>