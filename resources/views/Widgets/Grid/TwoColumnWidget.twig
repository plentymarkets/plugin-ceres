{% set customClass = widget.settings.customClass.mobile %}
{% set layoutDesktop = widget.settings.layout.mobile %}
{% set layoutTablet = widget.settings.layoutTablet.mobile | default( layoutDesktop ) %}
{% set layoutMobile = widget.settings.layoutMobile.mobile | default("stackedMobile") %}

<div class="widget widget-grid widget-two-col row{% if customClass | length > 0 %} {{ customClass }}{% endif %}">
    <div class="widget-inner
        {{- " " ~ gridLayouts[layoutDesktop][0] | replace({"-md-": "-xl-"}) }}
        {{- " " ~ gridLayouts[layoutDesktop][0] | replace({"-md-": "-lg-"}) }}
        {{- " " ~ gridLayouts[layoutTablet][0] }}
        {{- " " ~ gridLayouts[layoutMobile][0] | replace({"-md-": "-sm-"}) }}
        {{- " " ~ gridLayouts[layoutMobile][0] | replace({"-md-": "-"}) }}">
        <div{% if isPreview %} data-builder-child-container="first"{% endif %}>{{ children.first | raw }}</div>
    </div>
    <div class="widget-inner         
        {{- " " ~ gridLayouts[layoutDesktop][1] | replace({"-md-": "-xl-"}) }}
        {{- " " ~ gridLayouts[layoutDesktop][1] | replace({"-md-": "-lg-"}) }}
        {{- " " ~ gridLayouts[layoutTablet][1] }}
        {{- " " ~ gridLayouts[layoutMobile][1] | replace({"-md-": "-sm-"}) }}
        {{- " " ~ gridLayouts[layoutMobile][1] | replace({"-md-": "-"}) }}">
        <div{% if isPreview %} data-builder-child-container="second"{% endif %}>{{ children.second | raw }}</div>
    </div>
</div>
