    "type": "static",
    "categories": ["text"],
    "position": 900,
    "widgetClass": "Ceres\\Widgets\\Common\\ListWidget",
    "settings": {
        "title": {
            "type": "text",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.listTitleLabel",
                "tooltipText": "Widget.listTitleTooltip"
            }
        },
        "icon": {
            "type": "select",
            "required": true,
            "defaultValue": "none",
            "options": {
                "name": "Widget.listIconLabel",
                "tooltipText": "Widget.listIconTooltip",
                "listBoxValues": [
                    {
                        "value": "none",
                        "caption": "Widget.widgetIconNone",
                        "position": 0
                    },
                    {
                        "value": "fa-check",
                        "caption": "Widget.widgetIconCheck",
                        "position": 1
                    },
                    {
                        "value": "fa-circle",
                        "caption": "Widget.widgetIconCircle",
                        "position": 1
                    },
                    {
                        "value": "fa-circle-thin",
                        "caption": "Widget.widgetIconCircleThin",
                        "position": 1
                    },
                    {
                        "value": "fa-comment-o",
                        "caption": "Widget.widgetIconComment",
                        "position": 1
                    },
                    {
                        "value": "fa-credit-card",
                        "caption": "Widget.widgetIconCreditcard",
                        "position": 1
                    },
                    {
                        "value": "fa-envelope-o",
                        "caption": "Widget.widgetIconEnvelope",
                        "position": 1
                    },
                    {
                        "value": "fa-heart",
                        "caption": "Widget.widgetIconHeart",
                        "position": 1
                    },
                    {
                        "value": "fa-thumbs-o-up",
                        "caption": "Widget.widgetIconThumbsUp",
                        "position": 1
                    },
                    {
                        "value": "fa-euro",
                        "caption": "Widget.widgetIconEuro",
                        "position": 1
                    },
                    {
                        "value": "fa-dollar",
                        "caption": "Widget.widgetIconDollar",
                        "position": 1
                    }
                ]
            }
        },
        "centered": {
            "type": "checkbox",
            "defaultValue": false,
            "options": {
                "name": "Widget.listCenteredLabel"
            }
        },
        "entries": {
            "type": "vertical",
            "isList": "[1,]",
            "options": {
                "name": "Widget.listEntryLabel"
            },
            "children": {
                "text": {
                    "type": "text",
                    "required": false,
                    "options": {
                        "name": "Widget.listEntryNameLabel",
                        "tooltipText": "Widget.listEntryNameTooltip"
                    }
                },
                "url": {
                    "type": "url",
                    "required": false,
                    "options": {
                        "name": "Widget.listEntryUrlLabel",
                        "tooltipText": "Widget.listEntryUrlTooltip"
                    }
                }
            }
        }
    }
