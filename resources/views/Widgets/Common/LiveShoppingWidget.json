{
    "identifier": "Ceres::LiveShoppingWidget",
    "label": "Widget.liveShoppingLabel",
    "previewImageURL": "/images/widgets/live-shopping.svg",
    "type": "static",
    "categories": ["item"],
    "widgetClass": "Ceres\\Widgets\\Common\\LiveShoppingWidget",
    "settings": {
        "customClass":"@include(customClass)",
        "liveShoppingSelection": {
            "type": "select",
            "required": true,
            "defaultValue": 1,
            "options": {
                "name": "Widget.liveShoppingSelectionLabel",
                "tooltipText": "Widget.liveShoppingSelectionTooltip",
                "listBoxValues": [
                    {
                        "value": 1,
                        "caption": "Widget.liveShoppingSelectionValue1",
                        "position": 0
                    },
                    {
                        "value": 2,
                        "caption": "Widget.liveShoppingSelectionValue2",
                        "position": 1
                    },
                    {
                        "value": 3,
                        "caption": "Widget.liveShoppingSelectionValue3",
                        "position": 2
                    },
                    {
                        "value": 4,
                        "caption": "Widget.liveShoppingSelectionValue4",
                        "position": 3
                    },
                    {
                        "value": 5,
                        "caption": "Widget.liveShoppingSelectionValue5",
                        "position": 4
                    },
                    {
                        "value": 6,
                        "caption": "Widget.liveShoppingSelectionValue6",
                        "position": 5
                    },
                    {
                        "value": 7,
                        "caption": "Widget.liveShoppingSelectionValue7",
                        "position": 6
                    },
                    {
                        "value": 8,
                        "caption": "Widget.liveShoppingSelectionValue8",
                        "position": 7
                    },
                    {
                        "value": 9,
                        "caption": "Widget.liveShoppingSelectionValue9",
                        "position": 8
                    },
                    {
                        "value": 10,
                        "caption": "Widget.liveShoppingSelectionValue10",
                        "position": 9
                    }
                ]
            }
        },
        "sorting": {
            "type": "select",
            "required": true,
            "defaultValue": "sorting.price.avg_asc",
            "options": {
                "name": "Widget.liveShoppingSortingLabel",
                "tooltipText": "Widget.liveShoppingSortingTooltip",
                "listBoxValues": [
                    {
                        "value": "sorting.price.avg_asc",
                        "caption": "Widget.itemPrice_asc",
                        "position": 1
                    },
                    {
                        "value": "sorting.price.avg_desc",
                        "caption": "Widget.itemPrice_desc",
                        "position": 2
                    },
                    {
                        "value": "variation.createdAt_desc",
                        "caption": "Widget.itemVariationCreateTimestamp_desc",
                        "position": 3
                    },
                    {
                        "value": "variation.createdAt_asc",
                        "caption": "Widget.itemVariationCreateTimestamp_asc",
                        "position": 4
                    },
                    {
                        "value": "variation.availability.averageDays_asc",
                        "caption": "Widget.itemAvailabilityAverageDays_asc",
                        "position": 5
                    },
                    {
                        "value": "variation.availability.averageDays_desc",
                        "caption": "Widget.itemAvailabilityAverageDays_desc",
                        "position": 6
                    },
                    {
                        "value": "variation.number_asc",
                        "caption": "Widget.itemVariationCustomNumber_asc",
                        "position": 7
                    },
                    {
                        "value": "variation.number_desc",
                        "caption": "Widget.itemVariationCustomNumber_desc",
                        "position": 8
                    },
                    {
                        "value": "variation.updatedAt_asc",
                        "caption": "Widget.itemVariationLastUpdateTimestamp_asc",
                        "position": 9
                    },
                    {
                        "value": "variation.updatedAt_desc",
                        "caption": "Widget.itemVariationLastUpdateTimestamp_desc",
                        "position": 10
                    },
                    {
                        "value": "item.manufacturer.externalName_asc",
                        "caption": "Widget.itemProducerName_asc",
                        "position": 11
                    },
                    {
                        "value": "item.manufacturer.externalName_desc",
                        "caption": "Widget.itemProducerName_desc",
                        "position": 12
                    },
                    {
                        "value": "item.random",
                        "caption": "Widget.itemRandom",
                        "position": 13
                    }
                ]
            }
        },
        "showTimer": {
            "type": "checkbox",
            "required": true,
            "defaultValue": true,
            "options": {
                "name": "Widget.liveShoppingShowTimerLabel"
            }
        },
        "showTimerProgress": {
            "type": "checkbox",
            "required": true,
            "isVisible": "showTimer === true",
            "defaultValue": true,
            "options": {
                "name": "Widget.liveShoppingShowTimerProgressLabel"
            }
        },
        "showStock": {
            "type": "checkbox",
            "required": true,
            "defaultValue": true,
            "options": {
                "name": "Widget.liveShoppingShowStockLabel"
            }
        },
        "showStockProgress": {
            "type": "checkbox",
            "required": true,
            "isVisible": "showStock === true",
            "defaultValue": true,
            "options": {
                "name": "Widget.liveShoppingShowStockProgressLabel"
            }
        },
        "showCrossPrice": {
            "type": "checkbox",
            "required": true,
            "defaultValue": true,
            "options": {
                "name": "Widget.liveShoppingShowCrossPriceLabel"
            }
        },
        "customImagePath": {
            "type": "file",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.liveShoppingCustomImagePathLabel",
                "tooltipText": "Widget.liveShoppingCustomImagePathTooltip"
            }
        },
        "spacing":"@include(spacing)"
    }
}
