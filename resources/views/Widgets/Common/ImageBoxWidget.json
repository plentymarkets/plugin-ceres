{
    "identifier": "Ceres::ImageBoxWidget",
    "label": "Widget.imageBoxLabel",
    "previewImageURL": "/images/widgets/image-box.svg",
    "type": "default",
    "position": 600,
    "widgetClass": "Ceres\\Widgets\\Common\\ImageBoxWidget",
    "settings": {
        "appearance": "@include(appearance)",
        "style": {
            "type": "select",
            "required": true,
            "defaultValue": "block-caption",
            "options": {
                "name": "Widget.imageBoxStyleLabel",
                "tooltipText": "Widget.imageBoxStyleTooltip",
                "listBoxValues": [
                    {
                        "value": "block-caption",
                        "caption": "Widget.imageBoxStyleBlockCaption",
                        "position": 0
                    },
                    {
                        "value": "inline-caption",
                        "caption": "Widget.imageBoxStyleInlineCaption",
                        "position": 1
                    },
                    {
                        "value": "fullwidth",
                        "caption": "Widget.imageBoxStyleFullwidth",
                        "position": 2
                    },
                    {
                        "value": "no-caption",
                        "caption": "Widget.imageBoxStyleNoCaption",
                        "position": 3
                    }
                ]
            }
        },
        "headline": {
            "type": "text",
            "required": false,
            "isVisible": "style === 'block-caption' || style === 'inline-caption' || style === 'fullwidth'",
            "defaultValue": "",
            "options": {
                "name": "Widget.imageBoxHeadlineLabel",
                "tooltipText": "Widget.imageBoxHeadlineTooltip"
            }
        },
        "imageSize": {
            "type": "select",
            "required": true,
            "defaultValue": "cover",
            "options": {
                "name": "Widget.imageBoxImageSizeLabel",
                "tooltipText": "Widget.imageBoxImageSizeTooltip",
                "listBoxValues": [
                    {
                        "value": "cover",
                        "caption": "Widget.imageBoxImageSizeCover",
                        "position": 0
                    },
                    {
                        "value": "contain",
                        "caption": "Widget.imageBoxImageSizeContain",
                        "position": 1
                    }
                ]
            }
        },
        "categoryId": {
            "type": "category",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.imageBoxCategoryIdLabel",
                "tooltipText": "Widget.imageBoxCategoryIdTooltip"
            }
        },
        "variationId": {
            "type": "number",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.imageBoxVariationIdLabel",
                "tooltipText": "Widget.imageBoxVariationIdTooltip"
            }
        },
        "customImagePath": {
            "type": "file",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.imageBoxCustomImagePathLabel",
                "tooltipText": "Widget.imageBoxCustomImagePathTooltip"
            }
        }
    }
}