{
    "identifier": "Ceres::ImageBoxWidget",
    "label": "Widget.imageBoxLabel",
    "previewImageURL": "/images/widgets/image-box.svg",
    "type": "static",
    "categories": ["image"],
    "position": 600,
    "widgetClass": "Ceres\\Widgets\\Common\\ImageBoxWidget",
    "settings": {
        "customClass":"@include(customClass)",
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "primary",
            "options": "@include(appearance)"
        },
        "aspectRatio": {
            "type": "select",
            "required": true,
            "defaultValue": "auto",
            "options": {
                "name": "Widget.imageBoxAspectRatioLabel",
                "tooltipText": "Widget.imageBoxAspectRatioTooltip",
                "listBoxValues": [
                    {
                        "value": "auto",
                        "caption": "Widget.imageBoxAspectRatioAuto"
                    },
                    {
                        "value": "3-1",
                        "caption": "Widget.imageBoxAspectRatioThreeToOne"
                    },
                    {
                        "value": "2-1",
                        "caption": "Widget.imageBoxAspectRatioTwoToOne"
                    },
                    {
                        "value": "3-2",
                        "caption": "Widget.imageBoxAspectRatioThreeToTwo"
                    },
                    {
                        "value": "1-1",
                        "caption": "Widget.imageBoxAspectRatioOneToOne"
                    },
                    {
                        "value": "2-3",
                        "caption": "Widget.imageBoxAspectRatioTwoToThree"
                    },
                    {
                        "value": "1-2",
                        "caption": "Widget.imageBoxAspectRatioOneToTwo"
                    },
                    {
                        "value": "1-3",
                        "caption": "Widget.imageBoxAspectRatioOneToThree"
                    }
                ]
            }
        },
        "style": {
            "type": "select",
            "required": true,
            "defaultValue": "block-caption",
            "options": {
                "name": "Widget.imageBoxStyleLabel",
                "tooltipText": "Widget.imageBoxStyleTooltip",
                "listBoxValues": [
                    {
                        "value": "block-caption",
                        "caption": "Widget.imageBoxStyleBlockCaption",
                        "position": 0
                    },
                    {
                        "value": "inline-caption",
                        "caption": "Widget.imageBoxStyleInlineCaption",
                        "position": 1
                    },
                    {
                        "value": "fullwidth",
                        "caption": "Widget.imageBoxStyleFullwidth",
                        "position": 2
                    },
                    {
                        "value": "no-caption",
                        "caption": "Widget.imageBoxStyleNoCaption",
                        "position": 3
                    }
                ]
            }
        },
        "imageSize": {
            "type": "select",
            "required": true,
            "defaultValue": "cover",
            "options": {
                "name": "Widget.imageBoxImageSizeLabel",
                "tooltipText": "Widget.imageBoxImageSizeTooltip",
                "listBoxValues": [
                    {
                        "value": "cover",
                        "caption": "Widget.imageBoxImageSizeCover",
                        "position": 0
                    },
                    {
                        "value": "contain",
                        "caption": "Widget.imageBoxImageSizeContain",
                        "position": 1
                    }
                ]
            }
        },
        "url": {
            "type": "url",
            "required": false,
            "options": {
                "name": "Widget.imageBoxUrlLabel"
            }
        },
        "customCaption": {
            "type": "checkbox",
            "isVisible": "style !== 'no-caption'",
            "options": {
                "name": "Widget.imageBoxCustomCaption"
            }
        },
        "customImagePath": {
            "type": "file",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.imageBoxCustomImagePathLabel",
                "tooltipText": "Widget.imageBoxCustomImagePathTooltip"
            }
        },
        "spacing":"@include(spacingMargin)"
    }
}
