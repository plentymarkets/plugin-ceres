{
    "identifier": "Ceres::NavigationTreeWidget",
    "label": "Widget.navigationTreeLabel",
    "previewImageURL": "/images/widgets/navigation-tree.svg",
    "type": "default",
    "categories": ["navigation"],
    "position": 0,
    "widgetClass": "Ceres\\Widgets\\Navigation\\NavigationTreeWidget",
    "settings": {
        "customClass":"@include(customClass)",
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "none",
            "options": "@include(optionalAppearance)"
        },
        "expandableChildren": {
            "type": "checkbox",
            "defaultValue": false,
            "options": {
                "name": "Widget.navigationTreeExpandableChildrenLabel"
            }
        },
        "showItemCount": {
            "type": "checkbox",
            "defaultValue": false,
            "options": {
                "name": "Widget.navigationTreeShowItemCount"
            }
        },
        "customEntries": {
            "type": "vertical",
            "isList": "[1,]",
            "options": {
                "name": "Widget.categoryNavigationCustomEntries"
            },
            "children": {
                "text": {
                    "type": "text",
                    "required": true,
                    "defaultValue": "",
                    "options": {
                        "name": "Widget.categoryNavigationCustomEntriesLabel",
                        "tooltipText": "Widget.categoryNavigationCustomEntriesTooltip"
                    }
                },
                "url":
                {
                    "type": "url",
                    "required": false,
                    "options": {
                        "name": "Widget.categoryNavigationCustomEntriesUrlLabel",
                        "tooltipText": "Widget.categoryNavigationCustomEntriesUrlTooltip"
                    }
                },
                "position": {
                    "type": "text",
                    "required": false,
                    "options": {
                        "name": "Widget.categoryNavigationCustomEntriesPositionLabel",
                        "tooltipText": "Widget.categoryNavigationCustomEntriesPositionTooltip"
                    }
                }
            }
        },
        "spacing": {
            "type": "vertical",
            "options": {
                "name": "Widget.widgetSpacing"
            },
            "children": {
                "customPadding": {
                    "type": "checkbox",
                    "options": {
                        "name": "Widget.widgetCustomPadding"
                    }
                },
                "padding": {
                    "type": "spacing",
                    "isVisible": "!!spacing.customPadding",
                    "options": {
                        "units": ["px", "rem"],
                        "direction": "vertical"
                    }
                },
                "customMargin": {
                    "type": "checkbox",
                    "options": {
                        "name": "Widget.widgetCustomMargin"
                    }
                },
                "margin": {
                    "type": "spacing",
                    "isVisible": "!!spacing.customMargin",
                    "options": {
                        "units": ["px", "rem"],
                        "direction": "all"
                    }
                }
            }
        }
    }
}