{% extends getPartial('page-design') %}

{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% block PartialHead %}
    <meta name="description" content="{{ config("Ceres.meta."~metaLang~".description_cancel_rights") }}">
    <meta name="robots" content="{{ config("Ceres.meta.robots_cancel_rights") }}">
    <title class="no-print">Widerrufsformular | {{ config("Ceres.header.company_name") }}</title>
{% endblock %}

{% block PageBody %}

    {% set withdrawalForm = services.legalInformation.getWithdrawalForm() %}

    <div class="container-max page-content">
        <div class="row">
            <div class="col-xs-12 m-b-3">
                {% autoescape false %}
                    <h1>Widerrufsformular</h1>
                {% endautoescape %}

                <hr class="m-y-3">

                {% if withdrawalForm.htmlText %}
                    {{ withdrawalForm.htmlText | raw }}
                {% else %}
                    <p class="static-page-plain-text">{{ withdrawalForm.plainText }}</p>
                {% endif %}

                {{ LayoutContainer.show("Ceres::StaticPages.CancellationRights") }}

				<hr class="m-y-3">

				<div class="col-xs-12 col-md-12 no-padding">
					<button type="submit" class="btn btn-primary btn-medium float-right">
						<i class="fa fa-print" aria-hidden="true"></i> 
						Drucken
					</button>
				</div>
            </div>
        </div>
    </div>


{% endblock %}
