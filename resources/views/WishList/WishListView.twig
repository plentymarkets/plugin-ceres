{% extends getPartial('page-design') %}

{% block PartialHead %}
    {% embed getPartial('page-metadata') %}
        {% block title trans("Ceres::Template.wishList") %}
    {% endembed %}
{% endblock %}

{% block PageBody %}
    <div class="page-content wishlist container-max mb-5 py-3 bg-white">
        <div class="row mt-3">
            <div class="col-12">
                <h1 class="h2">{{ trans("Ceres::Template.wishList") }}</h1>
            </div>
        </div>

        <hr>

         <wish-list>
            <template #loading-animation>
                {% include "Ceres::ItemList.Partials.LoadingAnimation" with { 'loadingAnimationType': config("Ceres.item.loading_animation_type") } %}
            </template>
         </wish-list>
    </div>
{% endblock %}
