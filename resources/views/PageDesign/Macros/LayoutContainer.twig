{% macro show( containerName, object ) %}
    {% for content in container_internal(containerName, object) %}
        {{ content|raw }}
    {% endfor %}

    {% if object == null %}
        {% for content in container(containerName) %}
            {{ content.result|raw|filter_tags(containerName) }}
        {% endfor %}
    {% else %}
        {% for content in container(containerName, object) %}
            {{ content.result|raw|filter_tags(containerName) }}
        {% endfor %}
    {% endif %}

{% endmacro %}