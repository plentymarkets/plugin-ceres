    "globalSettings": {
        "routing": {
            "type": "vertical",
            "options": {
                "name": "Config.routing"
            },
            "children": {
                "homeCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryHome"
                    }
                },
                "homeEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.homeCategory",
                    "options": {
                        "name": "Config.routingEnableRouteHome"
                    }
                },
                "checkoutCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryCheckout"
                    }
                },
                "checkoutEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.checkoutCategory",
                    "options": {
                        "name": "Config.routingEnableRouteCheckout"
                    }
                },
                "myAccountCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryMyAccount"
                    }
                },
                "myAccountEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.myAccountCategory",
                    "options": {
                        "name": "Config.routingEnableRouteMyAccount"
                    }
                },
                "confirmationCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryConfirmation"
                    }
                },
                "confirmationEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.confirmationCategory",
                    "options": {
                        "name": "Config.routingEnableRouteConfirmation"
                    }
                },
                "confirmationGuestCategory": {
                    "type": "category",
                    "required": false,
                    "isVisible": "routing.confirmationCategory",
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryGuestConfirmation"
                    }
                },
                "cancellationRightsCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryCancellationRights"
                    }
                },
                "cancellationRightsEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.cancellationRightsCategory",
                    "options": {
                        "name": "Config.routingEnableRouteCancellationRights"
                    }
                },
                "cancellationFormCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryCancellationForm"
                    }
                },
                "cancellationFormEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.cancellationFormCategory",
                    "options": {
                        "name": "Config.routingEnableRouteCancellationForm"
                    }
                },
                "legalDisclosureCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryLegalDisclosure"
                    }
                },
                "legalDisclosureEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.legalDisclosureCategory",
                    "options": {
                        "name": "Config.routingEnableRouteLegalDisclosure"
                    }
                },
                "privacyPolicyCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryPrivacyPolicy"
                    }
                },
                "privacyPolicyEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.privacyPolicyCategory",
                    "options": {
                        "name": "Config.routingEnableRoutePrivacyPolicy"
                    }
                },
                "gtcCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryGtc"
                    }
                },
                "gtcEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.gtcCategory",
                    "options": {
                        "name": "Config.routingEnableRouteGtc"
                    }
                },
                "contactCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.routingCategoryContact"
                    }
                },
                "contactEnableRoute": {
                    "type": "checkbox",
                    "required": false,
                    "isVisible": "!routing.contactCategory",
                    "options": {
                        "name": "Config.routingEnableRouteContact"
                    }
                },
                "shippingCategory": {
                    "type": "category",
                    "required": false,
                    "defaultValue": null,
                    "options": {
                        "name": "Config.globalShippingCostsCategoryIdLabel"
                    }
                }
            }
        },
        "grecaptcha": {
            "type": "vertical",
            "options": {
                "name": "Config.grecaptcha"
            },
            "children": {
                "version": {
                    "type": "select",
                    "required": false,
                    "defaultValue": 2,
                    "options": {
                        "name": "Config.globalGoogleRecaptchaVersionLabel",
                        "listBoxValues": [
                            {
                                "value": 2,
                                "caption": "Config.globalGoogleRecaptchaVersion2Invisible"
                            },
                            {
                                "value": 3,
                                "caption": "Config.globalGoogleRecaptchaVersion3"
                            }
                        ]
                    }
                },
                "apikey": {
                    "type": "text",
                    "required": false,
                    "defaultValue": "",
                    "options": {
                        "name": "Config.globalGoogleRecaptchaApiKeyLabel"
                    }
                },
                "secret": {
                    "type": "text",
                    "required": false,
                    "defaultValue": "",
                    "options": {
                        "name": "Config.globalGoogleRecaptchaSecretLabel"
                    }
                },
                "threshold": {
                    "type": "number",
                    "required": false,
                    "defaultValue": 0.5,
                    "isVisible": "grecaptcha.version === 3",
                    "options": {
                        "name": "Config.globalGoogleRecaptchaThreshold"
                    }
                }
            }
        }
    },
    "globalSettingsHandler": "Ceres\\ShopBuilder\\Handler\\ShopBuilderSettingsHandler",
    "supportedFeatures": {
        "singleItemContent": true,
        "globalElementsOverride": true
    }
}
